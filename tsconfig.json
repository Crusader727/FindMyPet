{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "baseUrl": "src",
      "lib": ["es6", "dom"] ,
      "paths": {
        "components/*": [ "components/*" ],
        "app/*": [ "app/*" ],
        "pages/*": [ "pages/*" ],
        "core/*": [ "core/*" ],
        "common/*": [ "common/*" ],
        "constants/*": [ "constants/*" ],
        "types/*": [ "types/*" ]
      },
      "allowJs": true,
      // avoid issue when importing auto-generated css/scss typings (https://github.com/Microsoft/TypeScript-React-Starter/issues/8)
      "allowSyntheticDefaultImports": true,
      // https://stackoverflow.com/questions/49701735/cannot-find-module-csstype
      "moduleResolution": "node",
    },
    "include": [
      "./src/**/*", "integration/publication-preview.test.js"
  ]
  }
  